{
  "$schema": "https://railway.app/schema.json",
  "name": "kogaion",
  "description": "üê∫ Kogaion - Agent Blockchain Network",
  "repository": "https://github.com/kogaion/kogaion",
  "buildCommand": "npm install",
  "startCommand": "npm start",
  "envVars": [
    {
      "key": "PORT",
      "value": "3000",
      "description": "HTTP port"
    },
    {
      "key": "P2P_PORT",
      "value": "4000",
      "description": "WebSocket port"
    },
    {
      "key": "MINING_DIFFICULTY",
      "value": "2",
      "description": "Proof of Work difficulty"
    },
    {
      "key": "INITIAL_REPUTATION",
      "value": "100",
      "description": "Starting reputation for new agents"
    },
    {
      "key": "INITIAL_CREDITS",
      "value": "50",
      "description": "Starting credits for new agents"
    }
  ],
  "healthCheckPath": "/health",
  "metrics": {
    "enabled": true,
    "path": "/metrics"
  }
}
